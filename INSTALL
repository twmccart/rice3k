#!/bin/bash
set -euo pipefail

# Create work environment

root="$(dirname "$(readlink -f "$0")")"
cd $root

source $root/src/environment.sh

# Download Picard tool

cd $src
wget -qN --show-progress "https://github.com/broadinstitute/picard/releases/download/2.10.3/picard.jar"

# Install GATK
cd $src
wget -qO- --show-progress 'https://software.broadinstitute.org/gatk/download/auth?package=GATK-archive&version=3.6-0-g89b7209' | tar xfj -
rm -r resources/

# Download reference sequence

cd $reference
wget -qO- --show-progress "http://rapdb.dna.affrc.go.jp/download/archive/irgsp1/IRGSP-1.0_genome.fasta.gz" | gunzip - > IRGSP-1.0_genome.fasta

# Prepare faidx index and dict of reference genome
samtools faidx IRGSP-1.0_genome.fasta
java -jar ${src}/picard.jar CreateSequenceDictionary R=IRGSP-1.0_genome.fasta O=IRGSP-1.0_genome.dict

rm ${src}/picard.jar
echo "Installation Complete"
